<title>Create Event</title>
<h1>Create Event</h1>

<%= form_for(@event) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :place %>
  <%= f.text_field :place %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <%= f.submit "Create Event" %>
<% end %>